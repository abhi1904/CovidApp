<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTotalCaseTillToday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/totalCaseTillToday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTotalCaseTillDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/totalCaseByDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTotalCaseTillToday" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCountries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/countryList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTotalCaseTillDate" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDailyReportByCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Report By Country till now"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/btnCountries" />


</androidx.constraintlayout.widget.ConstraintLayout>